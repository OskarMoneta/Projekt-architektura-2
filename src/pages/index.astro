---
import Layout from '../layouts/Layout.astro'
import regs from './ts/regs'

const labels = Object.keys(regs)
const arrowIcon = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M502.6 278.6l-128 128c-12.51 12.51-32.76 12.49-45.25 0c-12.5-12.5-12.5-32.75 0-45.25L402.8 288H32C14.31 288 0 273.7 0 255.1S14.31 224 32 224h370.8l-73.38-73.38c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0l128 128C515.1 245.9 515.1 266.1 502.6 278.6z"/></svg>'
---

<script>
	import './ts/index'
</script>

<Layout title="Welcome to Astro.">
	<main>
		<h4>
			Wejście
		</h4>

		<ul class="third one">
			{labels.map((label) => (
				<li>
					<label for="name">{label}</label>

					<input type="text" maxlength="8" id={label} data-input={label} placeholder="Podaj wartość">
				</li>
			))}
		</ul>

		<div class="third two">
			<button data-save>Zapisz</button>

			<button data-random>Losuj</button>

			<button data-clear>Wyczyść</button>

			<div class="selects">
				<div class="select">
					<label>Z</label>

					<select name="from" id="from" data-select="from">
						{labels.map((label) => (
							<option value={label}>
								{label}
							</option>
						))}
					</select>
				</div>

				<div class="icon" set:html={arrowIcon}></div>

				<div class="select">
					<label>Do</label>

					<select name="to" id="to" data-select="to">
						{labels.map((label) => (
							<option value={label}>
								{label}
							</option>
						))}
					</select>	
				</div>
			</div>

			<div class="icon" set:html={arrowIcon}></div>

			<div class="double-btn">
				<button data-move>MOV</button>

				<button data-exchange>EXC</button>
			</div>
		</div>

		<h4>
			Wyjście
		</h4>

		<ul class="third three">
			{labels.map((label) => (
				<li>
					<div class="output">
						<div>
							{label}
						</div>

						<div data-output={label}>
							00000000
						</div>	
					</div>
				</li>
			))}
		</ul>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-grow: 1;
		flex-direction: column;
		align-items: center;
	}

	.third {
		height: 100%;
		width: 100%;
		margin: 0;
		display: flex;
		flex-grow: 1;
		justify-content: center;
		align-items: center;
		background-color: black;
	}

	.one {
		z-index: 0;
	}

	.two {
		display: flex;
		gap: 1rem;
		z-index: 10;
		background-color: white;
		box-shadow: var(--glow);

	}

	.two button, .two label, .two select  {
		background-color: black;
		box-shadow: var(--shadow);
		border-color: black;
	}

	three {
		z-index: 0;
	}

	ul {
		width: 100%;
		padding: 0;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		justify-content: space-around;
		list-style: none;
		text-transform: uppercase;
	}

	li {
		height: 50%;
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	li > * {
		height: 1.5rem;
	}

	label {
		min-width: 2rem;
		padding: .25rem;
		display: flex;
		justify-content: center;
		background-color: black;
		border: var(--border);
		border-radius: .25rem;
		box-shadow: var(--glow);
	}

	input {
		padding: .25rem .5rem;
		background-color: black;
		color: white;
		border: var(--border);
		border-radius: .25rem;
		box-shadow: var(--glow);
		text-align: center;
	}

	select {
		padding: .25rem .5rem;
		background-color: black;
		color: white;
		border: var(--border);
		border-radius: .25rem;
		box-shadow: var(--glow);
		text-align: center;
		text-transform: uppercase;
		font-size: 1rem;
	}

	select:hover {
		background-color: white;
		border-color: black;
		color: black;
		cursor: pointer;
	}

	.icon {
		width: 1rem;
		display: flex;
		align-items: center;
	}

	.double-btn {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: black;
		border-radius: .25rem;
		box-shadow: var(--shadow);
	}

	.double-btn::before {
		content: "";
		position: absolute;
		display: block;
		height: 60%;
		width: 1px;
		background-color: white;
		transition: .25s ease-out;
	}

	.double-btn:hover::before {
		opacity: 0;
	}

	.double-btn > button {
		width: 4.5rem;
		box-shadow: none;
	}
	
	button {
		padding: .25rem 1rem;
		background-color: black;
		color: white;
		border: var(--border);
		border-radius: .25rem;
		box-shadow: var(--glow);
		font-size: 1rem;
	}

	button:hover {
		background-color: white;
		border-color: black;
		color: black;
		cursor: pointer;
	}

	.selects {
		padding-left: 1rem;
		position: relative;
		display: flex;
		gap: 1rem;
	}

	.select {
		display: flex;
		gap: 1rem;
	}

	.selects::before {
		content: "";
		height: 100%;
		width: 1px;
		position: absolute;
		left: 0;
		background-color: black;
		box-shadow: var(--shadow);
	}

	.output {
		height: min-content;
		display: flex;
		gap: 1rem;
	}

	.output > div {
		height: 1.5rem;
		width: 9rem;
		padding: .25rem;
		display: flex;
		justify-content: center;
		background-color: black;
		border: var(--border);
		border-radius: .25rem;
		box-shadow: var(--glow);
	}

	.output > div:first-child {
		width: 2rem;
		padding: .25rem;
	}

	h4 {
		width: 100%;
		margin: 0;
		margin-top: .5rem;
		background-color: black;
		text-align: center;
		font-weight: normal;
		z-index: 3;
	}
</style>
